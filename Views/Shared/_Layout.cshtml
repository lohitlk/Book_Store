<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Book_Store</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IM+Fell+English+SC&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=IM+Fell+English+SC&display=swap" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/style.css">
</head>
<body>
    <header >
            <div id="header">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index" style="text-decoration: none">
                        <h1 style="margin-bottom: -80px; z-index: 999; font-size: 50px; color: green">Kids-BookStore</h1>
                    </a>
                    <ul style="margin-bottom:20px;">

                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Home" asp-action="Cart">Cart</a></li>
                        <li><a asp-controller="Home" asp-action="Login">Login/Register</a></li>
                    </ul>
                </div>
            </div>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <div id="footer" style="">
        <div>
            <div>
                <span>Follow us on</span> <a href="#" class="facebook">Facebook</a> <a href="#" class="subscribe">Email Us</a>
                <a href="#" class="twitter">Twitter</a>
            </div>

        </div>
        <p class="footnote">
            Copyright &copy; 2021 <a href="#"></a> All rights reserved By <a target="_blank"
                                                                             href="">BookStore.com</a>
        </p>
    </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
