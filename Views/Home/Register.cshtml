@model Book_Store.Models.Register
@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 style="color:aliceblue">Register</h1>
<label for="name" style="color: whitesmoke">Email: </label>
<input id="name" name="name" type="text" placeholder="Enter your name" class="form-control" asp-for="name" />
<br />
<label for="email" style="color: whitesmoke">Email: </label>
<input id="email" name="email" type="text" placeholder="Enter your email" class="form-control" asp-for="email" />
<br />
<label for="password" style="color: whitesmoke">Password: </label>
<input id="password" name="password" type="password" placeholder="Enter your password" class="form-control" asp-for="password" />
<br/>
<input type="submit" asp-action="Register" style="color: Black; background-color:aliceblue" />
<h4 style="color:azure">Already have an account <a asp-action="Login" style="color:antiquewhite">Login</a>?</h4>

