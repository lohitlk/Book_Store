@model Book_Store.Models.UserDetails

@{
    ViewData["Title"] = "Checkout";
}

<h1>Checkout</h1>

<h4>UserDetails</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Checkout">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="userdetails_name" class="control-label">Name</label>
                <input asp-for="userdetails_name" class="form-control" />
                <span asp-validation-for="userdetails_name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userdetais_email" class="control-label">Email</label>
                <input asp-for="userdetais_email" class="form-control" />
                <span asp-validation-for="userdetais_email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userdetails_address" class="control-label">Address</label>
                <input asp-for="userdetails_address" class="form-control" />
                <span asp-validation-for="userdetails_address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userdetails_state" class="control-label">State</label>
                <input asp-for="userdetails_state" class="form-control" />
                <span asp-validation-for="userdetails_state" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="userdetails_pincode" class="control-label">Pincode</label>
                <input asp-for="userdetails_pincode" class="form-control" />
                <span asp-validation-for="userdetails_pincode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


